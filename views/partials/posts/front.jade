.breadcrumb-container
    .container-fluid
        .row
            .col-md-12
                breadcrumb
.container-fluid
    .row
        .col-md-12
            img( ng-src="{{ post.cover_photo.path }}" ng-if="section == 'blog'" )
            .row.post( ng-if="section == 'blog'" )
                .share-buttons
                    p Compartir
                    .fb-share
                        div( fb-share="post.name" )
                    .tw-share
                        div( tweet="post.name" )
                .col-md-8.col-md-offset-1
                    h1.title {{ post.name }}
                    p.author
                        span {{ post.creation_date | date : 'dd MMMM, yyyy' }} |
                        | {{ post.author }}
                    .content( ng-bind-html="content" )
                    div( ng-if="post.datasets.length > 0 && post.datasets[0] != ''" )
                        h2 Datos
                        .data-table
                            table.table
                                tbody
                                    tr( ng-repeat="dataset in datasets" ng-click="select( dataset.name )" )
                                        td {{ dataset.title }}
                                        td( width="25%" ) {{ dataset.organization.title }}
                                        td( width="10%" )
                                            span.dataset-format( ng-if="dataset.resources[0].format == 'CSV' || dataset.resources[0].format == 'JSON' || dataset.resources[0].format == 'SHP' || dataset.resources[0].format == 'KML' || dataset.resources[0].format == 'XSLX' || dataset.resources[0].format == 'GEOJSON' || dataset.resources[0].format == 'XML' || dataset.resources[0].format == 'csv' || dataset.resources[0].format == 'json' || dataset.resources[0].format == 'shp' || dataset.resources[0].format == 'kml' || dataset.resources[0].format == 'xslx' || dataset.resources[0].format == 'geojson' || dataset.resources[0].format == 'xml'" data-format="{{ dataset.resources[0].format | noSpace }}") {{ dataset.resources[0].format }}
                    #disqus_thread
            .post.tool( ng-if="section == 'herramientas'" )
                .share-buttons
                    p Compartir
                    .fb-share
                        div( fb-share="post.name" )
                    .tw-share
                        div( tweet="post.name" )
                .row
                    .col-md-4.tool-info
                        h1.title {{ post.name }}
                        p.author
                            span {{ post.creation_date | date : 'dd MMMM, yyyy' }} |
                            | {{ post.author }}
                        a.tag( ui-sref="front.section({ section : post.section.slug, tag : post.tag.slug })" alt="{{ post.tag.name }}" )
                            span( class="tag-icon tag-{{ post.tag.slug }}" )
                            span.link {{ post.tag.name }}
                        .link-buttons
                            a.tool-link.apple-link( href="{{ post.apple_store }}" ng-if="post.apple_store" alt="App Store" target="_blank" )
                                img( src="img/ic-ios.png" alt="App Store" )
                                | Disponible en App Store
                            a.tool-link.google-link( href="{{ post.google_play }}" ng-if="post.google_play" alt="Android Market" target="_blank" )
                                img( src="img/ic-android.png" alg="Android Market" )
                                | Disponible en Android Market
                    .col-md-7.col-md-offset-1.tool-slider
                .row
                    .col-md-8
                        .content( ng-bind-html="content" )
                .row
                    .col-md-12
                        .data-table( ng-if="post.datasets && post.datasets.length > 0 && post.datasets[0] != ''" )
                            h2 Datos
                            table.table
                                tbody
                                    tr( ng-repeat="dataset in datasets" ng-click="select( dataset.name )" )
                                        td {{ dataset.title }}
                                        td( width="25%" ) {{ dataset.organization.title }}
                                        td( width="10%" )
                                            span.dataset-format( ng-if="dataset.resources[0].format == 'CSV' || dataset.resources[0].format == 'JSON' || dataset.resources[0].format == 'SHP' || dataset.resources[0].format == 'KML' || dataset.resources[0].format == 'XSLX' || dataset.resources[0].format == 'GEOJSON' || dataset.resources[0].format == 'XML' || dataset.resources[0].format == 'csv' || dataset.resources[0].format == 'json' || dataset.resources[0].format == 'shp' || dataset.resources[0].format == 'kml' || dataset.resources[0].format == 'xslx' || dataset.resources[0].format == 'geojson' || dataset.resources[0].format == 'xml'" data-format="{{ dataset.resources[0].format | noSpace }}") {{ dataset.resources[0].format }}
                        #disqus_thread
