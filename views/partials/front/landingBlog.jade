.container-fluid
    .row
        .col-md-12
            h2 Blog
            .row.posts-row
                .col-md-4.post-item( ng-repeat="post in posts" )
                    .inner
                        img( ng-src="{{ post.grid_photo.path }}" )
                        .overlay
                            h3: a( href="#" ) {{ post.name | limitTo:46 }}
                            p.author {{ post.author }}
                            a.read-more( href="#" )
                                | Leer m√°s
                                .arrow-tip
                            a.tag( href="#" )
                                span( class="tag-icon tag-{{ post.tag.slug }}" )
                                span.link {{ post.tag.name }}
                            p.category {{ post.category.name }}