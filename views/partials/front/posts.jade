.container-fluid
    .row
        .col-md-12
            h2
                a( ui-sref="front.section({ section : section, section_id : section_id, tag : tag })" ) {{ section }}
            .row.posts-row
                .col-md-12.post-item( ng-repeat="post in featured" )
                    include ../includes/post.jade
                .col-md-6.post-item( ng-repeat="post in posts" ng-if="section == 'blog'" )
                    include ../includes/post.jade
                .col-md-4.tool-item( ng-repeat="post in posts" ng-if="section == 'herramientas'" )
                    include ../includes/tool.jade
            p.more-posts: a( ui-sref="front.section({ section : section, section_id : section_id })" ) 
                span( ng-if="section == 'blog'" ) Ver más historias
                span( ng-if="section == 'herramientas'" ) Ver más herramientas