.row
    .col-md-6.col-md-offset-3
        form( ng-submit="create()" )
            .form-group
                label( for="name" ) Nombre
                input.form-control( type="text" name="name" placeholder="Nombre" ng-model="dataset.title" )
            .form-group
                label( for="link" ) Enlace
                input.form-control( type="text" name="link" placeholder="http://www.google.com" ng-model="dataset.link" )
            .form-group
                label( for="organization" ) Organizaci√≥n
                input.form-control( type="text" name="organization" placeholder="SAGARPA" ng-model="dataset.organization" )
            .form-group
                label( for="formats" ) Formatos
                select.form-control.multiple( name="formats" ng-model="dataset.formats" multiple )
                    option( value="pdf" ) PDF
                    option( value="xml" ) XML
                    option( value="csv" ) CSV
                    option( value="kml" ) KML
                    option( value="json" ) JSON
                    option( value="geojson" ) GEOJSON
                    option( value="XLS" ) XLS
                    option( value="XLSX" ) XLSX
                    option( value="shp" ) SHP
                    option( value="kmz" ) KMZ
                    option( value="zip" ) ZIP
            .form-group
                label( for="type" ) Tipo
                select.form-control( name="type" ng-model="dataset.type" )
                    option( value="" ) Seleccionar tipo...
                    option( value="RECOMMENDED" ) Recomendado
            button.btn.btn-success.pull-right( type="submit" ng-if="$state.is( 'datasets.create' )" ) Crear
            button.btn.btn-success.pull-right( type="submit" ng-if="$state.is( 'datasets.edit' )" ) Actualizar
            a.btn.btn-default.pull-right( ui-sref="datasets.list" ) Cancelar